<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:minHeight="80dp"
    tools:context="com.perfectproperties.app.ppc_app.Fragment.HiringFrament">

    <ImageView
        android:id="@+id/image_hiring"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_hiring" />


    <TextView
        android:id="@+id/text_hiring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/image_hiring"
        android:text="Tuyển Nhân Viên Marketing "
        android:textColor="@color/color_Main"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/text_hiring"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/image_hiring"
        android:text="Hạn nộp: 29/11/2016"
        android:textColor="@color/color_Main"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>